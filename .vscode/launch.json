{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask: Run (with reload)",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "backend.app:app",
                "FLASK_DEBUG": "1"
            },
            "args": ["run", "--host=127.0.0.1", "--port=5000"],
            "jinja": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "Running on (https?://[^\\s]+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        }
    ]
}
